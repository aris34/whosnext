<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buttonsfragment"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:gravity="center">
    <LinearLayout 
    	android:baselineAligned="false"
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:background="@drawable/backrepeat" 
    	android:gravity="center" >
        
       <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="52sp" 
            android:text="Who's next?"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginBottom="80dp"
            android:gravity="center" />
        
    	<Button android:id="@+id/creategame"
        	android:layout_width="200dp"
        	android:layout_height="80dp"
        	android:text="@string/create_game_button"
        	android:layout_marginBottom="28dp"
        	android:background="@drawable/backrepeat_button"
        	android:textSize="22sp" />
    
    	<Button android:id="@+id/joingame"
        	android:layout_width="200dp"
        	android:layout_height="80dp"
        	android:text="@string/join_game_button"
        	android:layout_marginTop="28dp" 
        	android:background="@drawable/backrepeat_button"
        	android:textSize="22sp" />
    </LinearLayout>
</FrameLayout>